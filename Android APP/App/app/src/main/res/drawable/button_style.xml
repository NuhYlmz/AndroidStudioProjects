<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#EF5350"
                android:endColor="#EF9A9A"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#E53935" />
            <corners
                android:radius="1000dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B71C1C"
                android:endColor="#D32F2F"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="#D32F2F" />
            <corners
                android:radius="1000dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

        </shape>

    </item>

</selector>
